                  <path fill="#1976D2"  d="M43.611,20.083H42V20H24v8h11.303c-0.792,2.237-2.231,4.166-4.087,5.571c0.001-0.001,0.002-0.001,0.003-0.002l6.19,5.238C36.971,39.205,44,34,44,24C44,22.659,43.862,21.35,43.611,20.083z"/>
                </svg>
              </a>
            </div>
          </div>
        </form>
        <form id="formSignup" action="/api/session/register" method="post" class="signup">
          <div class="field inputsSignup">
            <input type="text" name="firstName" placeholder="First Name" value={{firstName}}>
            <input type="text" name="lastName" placeholder="Last Name" value={{lastName}}>
          </div>
          <div class="field inputsSignup">
            <input class="ageSignup" name="age" type="text" placeholder="Age" value={{age}}>
            <input class="emailSignup" name="email" type="text" placeholder="Email" value={{emailRegister}}>
          </div>
          <div class="field inputsSignup">
            <input type="password" id="passwordSignup1" name="password" placeholder="Password" maxlength="10"/>
            <input type="password" id="passwordSignup2" name="passwordConfirm" placeholder="Confirm Pass" maxlength="10"/> 
            <span class="eyeBtnSignup" id="eyeBtnSignup"></span>
          </div>
          <div class="field btn">
            <div class="btn-layer"></div>
            <input type="submit" value="Signup" />
          </div>
          <label for="signup" class="messageError signupError">{{messageSignup}}</label>
          <div class="signup-link" id="login-link">
            You are a member? <a href="">Login now</a>
          </div>
        </form>
      </div>
    </div>
    <div class=
    {{#if emailExpired}} 
      "recoverContainer recoverShow" 
    {{else}} 
      "recoverContainer"
    {{/if}}   >
      <div class="recover-wrapper">
        <form class="recover" method="post" action="/recovery/sendEmail" id="formRecover">
          <header>
            <h2>Recovery email</h2>
          </header>
          <main class="recoverMain" {{#if emailExpired}}
              style="margin-top: 25px;"
            {{else}}{{/if}}>
            <input type="text" name="email" placeholder="Email recovey" id="recoverInput"/>
          </main>
          <footer>
            <div class="recoverBtn">
              <div class="btn-layer"></div>
              <div class="btn-text" id="recoverCancel">Cancel</div>
            </div>
            <div class="recoverBtn">
              <div class="btn-layer send"></div>
              <input class="btn-text" type="submit" value="Send" id="recoverSend"/>
            </div>
          </footer>
            <label for="recoveryError" class="recoveryMessage recoveryError">Invalid Email</label>
            <label for="recoveryExpired" class=
            {{#if emailExpired}}
              "recoveryMessage recoveryExpired recoveryMessageShow"
            {{else}}
              "recoveryMessage recoveryExpired"
            {{/if}}
            >Email Expired. Generate a recovery email again.</label>
            <label for="recoverySend" class="recoveryMessage recoverySend">Email Send</label>
        </form>
      </div>
    </div>
  </div>
</main>
<script type="module" src="js/login.js"></script>
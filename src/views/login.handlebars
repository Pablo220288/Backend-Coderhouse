<main class="mainLogin">
  <div
    {{#if signup}}
      class="wrapper active"
    {{else}} 
      class="wrapper"
    {{/if}}  id="wrapper">
    <div class="title-text">
      <div class="title login">Login</div>
      <div class="title signup">Signup</div>
    </div>
    <div class="form-container">
      <div class="slide-controls">
        <label for="login" id="slideLogin" class="slide login">Login</label>
        <label for="signup" id="slideSignup" class="slide signup">Signup</label>
        <div class="slider-tab"></div>
      </div>
      <div class="form-inner">
        <form id="formLogin" action="/api/session/login" method="post" class="login">
          <div class="field">
            <input type="text" name="email" placeholder="Email Address" value={{email}}>
          </div>
          <div class="field">
            <input id="passwordLogin" type="password" name="password" placeholder="Password"/>
            <span class="eyeBtn" id="eyeBtn"></span>
          </div>
          <div class="pass-link">
            <span id="recoverPassword">Forgot password?</span>
          </div>
          <div class="field btn">
            <div class="btn-layer"></div>
            <input type="submit" value="Login"/>
          </div>
          <label for="login" class="messageError">{{messageLogin}}</label>
          <label for="newUser" class="messageNewUser">{{messageNewUser}}</label>
          <div class="signup-link" id="signup-link">
            Not a member? <a href="">Signup now</a>
          </div>
          <div class="registerExternal">
            <span>Login for:</span>
            <div class="iconsRegister">
              <a class="iconRegister" href="/api/session/githubsession">
